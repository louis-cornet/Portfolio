---
import * as CONTENT from "../pages/content"
import AccordionLayout from "../layouts/AccordionLayout.astro";
import Card from "./Card.astro";
---

<ul class="shadow-box">
  <AccordionLayout title={"A Propos"} icon={"mdi:account-badge-outline"}>
    {CONTENT.about}
  </AccordionLayout>
    <AccordionLayout title={"Travail Professionnel"} icon={"ic:baseline-work-outline"}>
      {
        CONTENT.work.map((item) => {
          return (
            <Card
              title={item.role}
              timeframe={`${item.from} - ${item.to}`}
              description={item.location}
              tags={item.skills}
              url={item.org_url}
              url_name={item.org}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Projets"} icon={"ion:md-build"}>
      {
        CONTENT.projects.map((item) => {
          return (
            <Card
              title={item.title}
              timeframe="2022-2023"
              description={item.description}
              tags={item.tech}
              url={item.url}
              url_name={""}
            />
          );
        })
      }
    </AccordionLayout>

    <AccordionLayout title={"Education"} icon={"carbon:education"}>
      {
        CONTENT.education.map((item) => {
          return (
            <Card
              title={item.course}
              timeframe={`${item.from} - ${item.to}`}
              description={item.location}
              tags={""}
              url={"#"}
              url_name={item.institute}
            />
          );
        })
      }
    </AccordionLayout>
